# PR Agent System - n8n Environment Variables
# Copy this file to .env and fill in your values

# ======================
# LLM API Keys (at least one required)
# ======================

# OpenAI API Key (for GPT-4o, GPT-4 Turbo, GPT-3.5)
OPENAI_API_KEY=sk-...

# Anthropic API Key (for Claude Sonnet 4.5, Claude 3.5)
ANTHROPIC_API_KEY=sk-ant-...

# ======================
# Search API Keys (at least one required)
# ======================

# Serper API Key (Google Search via Serper.dev)
SERPER_API_KEY=...

# Tavily API Key (Tavily Search API)
TAVILY_API_KEY=...

# ======================
# Email Configuration (required)
# ======================

# Sender email address
EMAIL_FROM=pr@agency.com

# Email password or app password
# For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
EMAIL_PASSWORD=your_app_password_here

# Default PR manager email (can be overridden per request)
PR_MANAGER_EMAIL=manager@agency.com

# ======================
# SMTP Configuration (optional overrides)
# ======================

# SMTP server hostname (default: smtp.gmail.com)
SMTP_SERVER=smtp.gmail.com

# SMTP server port (default: 587)
SMTP_PORT=587

# ======================
# n8n Configuration
# ======================

# n8n Webhook base URL (set this to your n8n instance URL)
N8N_WEBHOOK_URL=http://localhost:5678

# n8n Webhook path (default: webhook)
N8N_WEBHOOK_PATH=webhook

# n8n Basic Auth credentials (if enabled)
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

# ======================
# Advanced Options
# ======================

# LLM Model Names (optional overrides)
# OpenAI: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
# Anthropic: claude-sonnet-4-5-20250929, claude-3-5-sonnet-20241022
LLM_MODEL=gpt-4o
HUMANIZER_MODEL=gpt-4o

# LLM Temperature Settings
LLM_TEMPERATURE=0.7
HUMANIZER_TEMPERATURE=0.9

# Max search results per query
MAX_SEARCH_RESULTS=5

# Executive profiles directory (relative to workflow execution)
PROFILES_DIR=/data/pr_agent/config/executive_profiles

# ======================
# Optional: Observability
# ======================

# LangSmith API Key (for tracing and monitoring)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=pr-agent-n8n

# ======================
# Optional: Redis Caching
# ======================

# Redis URL for caching (requires n8n-nodes-redis)
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds
CACHE_TTL_COMMENTS=3600
CACHE_TTL_SEARCH=86400

# ======================
# Production Deployment
# ======================

# Node environment (development, production)
NODE_ENV=production

# Timezone
TZ=America/New_York

# Log level (error, warn, info, debug)
LOG_LEVEL=info
